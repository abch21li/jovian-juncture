{{! UPDATE BOOKING PAGE CONTENT }}

<div class="updatebookingparent">

  <div class="bookingsheader">
    <h1>Update Booking</h1>
  </div>

  {{! Validation Errors }}
  {{#if errors.length}}
    <div class="validationerror">
      <h4>Your booking information was not able to be updated because:</h4>
      <ul>
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
        <br />
      </ul>
    </div>
  {{/if}}
  {{#if errors.length}}

    <form action="/booking/update/{{id}}" method="post">

      {{! Artist Input Field }}
      <div class="form-outline mb-4">
        <input
          type="text"
          name="artist"
          id="questioninput"
          class="form-control"
          value="{{newartist}}"
        />
        <label class="form-label" for="form2Example7">Artist</label>
      </div>

      {{! Project Input Field }}
      <div class="form-outline mb-4">
        <input
          type="text"
          name="project"
          id="questioninput"
          class="form-control"
          value="{{newproject}}"
        />
        <label class="form-label" for="form2Example7">Project</label>
      </div>

      {{! Email Input Field }}
      <div class="form-outline mb-4">
        <input
          type="text"
          name="email"
          id="answerinput"
          class="form-control"
          value="{{newemail}}"
        />
        <label class="form-label" for="form2Example8">Email</label>
      </div>

      {{! Confirm Button }}
      <button
        type="submit"
        value="Confirm"
        id="submitbutton"
        class="btn btn-dark"
      ><h5>Confirm
        </h5></button>
      <br />
      <br />
      <br />
      <br />
    </form>

  {{else}}

    <form action="/booking/update/{{id}}" method="post">

      {{! Artist Input }}
      <div class="form-outline mb-4">
        <input
          type="text"
          name="artist"
          id="questioninput"
          class="form-control"
          value="{{artist}}"
        />
        <label class="form-label" for="form2Example7">Artist</label>
      </div>

      {{! Project Input }}
      <div class="form-outline mb-4">
        <input
          type="text"
          name="project"
          id="questioninput"
          class="form-control"
          value="{{project}}"
        />
        <label class="form-label" for="form2Example7">Project</label>
      </div>

      {{! Email Input}}
      <div class="form-outline mb-4">
        <input
          type="text"
          name="email"
          id="answerinput"
          class="form-control"
          value="{{email}}"
        />
        <label class="form-label" for="form2Example8">Email</label>
      </div>

      {{! Confirm Button}}
      <button
        type="submit"
        value="Confirm"
        id="submitbutton"
        class="btn btn-dark"
      ><h5>Confirm
        </h5></button>
      <br />
      <br />
      <br />
      <br />
    </form>
  {{/if}}
</div>