{{! UPDATE REVIEW CONTENT }}

  <div class="reviewsheader">
    <h1>Update Review</h1>
   </div>

<div class="updatereviewparent">
    <div class="updatereviewchild">

      {{! Validation Errors }}
      {{#if errors.length}}
      <div class="reviewvalidationerror">
        <h4>This review was not able to be updated because:</h4>
        <ul>
          {{#each errors}}
          <li>{{this}}</li>
          {{/each}} 
        </ul>
      </div>
      {{/if}}
      <br />
    
    {{! UPDATE REVIEW DISPLAY }}
    {{#if errors.length}}
    <div class="updatereivewparent">

          {{! Review Input Field }}
          <form action="/review/update/{{id}}" method="post">
            <div class="form-outline mb-4">
              <input
                type="text"
                name="reviewtext"
                id="questioninput"
                class="form-control"
                value="{{newtext}}"
              />
              <label class="form-label" for="form2Example7">Review</label>
            </div>

            {{! Name Input Field }}
            <div class="form-outline mb-4">
              <input
                type="text"
                name="artistname"
                id="answerinput"
                class="form-control"
                value="{{newname}}"
              />
              <label class="form-label" for="form2Example8">Name</label>
            </div>

            {{! Submit Button }}
            <button type="submit" value="Confirm" id="submitbutton" class="btn btn-dark"><h5>Confirm
              </h5></button>
          </form>

      {{else}}

      <div class="updatereivewparent">
          <form action="/review/update/{{id}}" method="post">

            {{! Review Input Field }}
            <div class="form-outline mb-4">
              <input
                type="text"
                name="reviewtext"
                id="questioninput"
                class="form-control"
                value="{{text}}"
              />
              <label class="form-label" for="form2Example7">Review</label>
            </div>

            {{! Name Input Field }}
            <div class="form-outline mb-4">
              <input
                type="text"
                name="artistname"
                id="answerinput"
                class="form-control"
                value="{{name}}"
              />
              <label class="form-label" for="form2Example8">Name</label>
            </div>
            
            {{! Submit Button }}
            <button type="submit" value="Confirm" id="submitbutton" class="btn btn-dark"><h5>Confirm
              </h5></button>
          </form>
      </div>
    </div>
    {{/if}}
  </div> 
</div>